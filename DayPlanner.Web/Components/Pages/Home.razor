<RadzenStack Orientation="Orientation.Vertical" Gap="40px" Style="padding: 2rem; max-width: 1200px; margin: 0 auto;">

    <!-- Hero Section -->
    <RadzenCard Class="hero-card" Style="background: linear-gradient(135deg, var(--rz-primary) 0%, var(--rz-secondary) 100%); text-align: center;">
        <RadzenText Class="hero-title gradient-text">
            @Localizer["WelcomeToDayPlanner"]
        </RadzenText>
        <RadzenText Class="hero-description">
            @Localizer["Introduction"]
        </RadzenText>
    </RadzenCard>

    <!-- Features Grid -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem;">
        <!-- Feature 1 -->
        <RadzenCard Class="hover-scale" Style="text-align: center; padding: 2rem;">
            <RadzenIcon Icon="event_available" Style="font-size: 3rem; color: var(--rz-primary); margin-bottom: 1rem;" />
            <RadzenText Style="font-size: 1.5rem; font-weight: 600; display: block;">
                @Localizer["Feature1"]
            </RadzenText>
            <RadzenText Style="color: var(--rz-text-secondary); margin-top: 1rem;">
                @Localizer["Feature1Description"]
            </RadzenText>
        </RadzenCard>

        <!-- Feature 2 -->
        <RadzenCard Class="hover-scale" Style="text-align: center; padding: 2rem;">
            <RadzenIcon Icon="insights" Style="font-size: 3rem; color: var(--rz-secondary); margin-bottom: 1rem;" />
            <RadzenText Style="font-size: 1.5rem; font-weight: 600; display: block;">
                @Localizer["Feature2"]
            </RadzenText>
            <RadzenText Style="color: var(--rz-text-secondary); margin-top: 1rem;">
                @Localizer["Feature2Description"]
            </RadzenText>
        </RadzenCard>

        <!-- Feature 3 -->
        <RadzenCard Class="hover-scale" Style="text-align: center; padding: 2rem;">
            <RadzenIcon Icon="sync_alt" Style="font-size: 3rem; color: var(--rz-success); margin-bottom: 1rem;" />
            <RadzenText Style="font-size: 1.5rem; font-weight: 600; display: block;">
                @Localizer["Feature3"]
            </RadzenText>
            <RadzenText Style="color: var(--rz-text-secondary); margin-top: 1rem;">
                @Localizer["Feature3Description"]
            </RadzenText>
        </RadzenCard>
    </div>

    <!-- AI Section -->
    <RadzenCard class="ai-card" Style="background: var(--rz-base-100); display: flex; gap: 2rem; align-items: center; padding: 1rem;">
        <RadzenIcon Icon="psychology" class="ai-icon" Style="font-size: 4rem; color: var(--rz-success);" />
        <div class="ai-content">
            <RadzenText Style="font-size: 2rem; font-weight: 600;">
                @Localizer["AIIntegration"]
            </RadzenText>
            <RadzenText Style="color: var(--rz-text-secondary); margin-top: 0.5rem;">
                @Localizer["AIIntegrationDescription"]
            </RadzenText>
            <RadzenButton Text="@Localizer["TryNow"]" Icon="rocket_launch" ButtonStyle="ButtonStyle.Success"
                          Style="margin-top: 1.5rem; padding: 0.75rem 2rem;" Click="@(() => Navigation.NavigateToLogin())" />
        </div>
    </RadzenCard>

    <!-- Stats Section -->
    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2rem;">
        <RadzenCard Class="hover-scale" Style="text-align: center; padding: 2rem;">
            <RadzenText Style="font-size: 2.5rem; font-weight: 700; color: var(--rz-primary);">
                3+
            </RadzenText>
            <RadzenText Style="font-size: 1.1rem; color: var(--rz-text-secondary);">
                @Localizer["YearsExperience"]
            </RadzenText>
        </RadzenCard>
        <RadzenCard Class="hover-scale" Style="text-align: center; padding: 2rem;">
            <RadzenText Style="font-size: 2.5rem; font-weight: 700; color: var(--rz-secondary);">
                99%
            </RadzenText>
            <RadzenText Style="font-size: 1.1rem; color: var(--rz-text-secondary);">
                @Localizer["SatisfactionRate"]
            </RadzenText>
        </RadzenCard>
        <RadzenCard Class="hover-scale" Style="text-align: center; padding: 2rem;">
            <RadzenText Style="font-size: 2.5rem; font-weight: 700; color: var(--rz-success);">
                24/7
            </RadzenText>
            <RadzenText Style="font-size: 1.1rem; color: var(--rz-text-secondary);">
                @Localizer["SupportAvailability"]
            </RadzenText>
        </RadzenCard>
    </div>

    <!-- CTA Section -->
    <RadzenCard Style="background: var(--rz-primary); text-align: center; padding: 1rem;">
        <RadzenText Style="font-size: 2rem; font-weight: 600; display: block; color: white;">
            @Localizer["ReadyToStart"]
        </RadzenText>
        <RadzenButton Text="@Localizer["ReadyToStartDescription"]" Icon="arrow_forward" ButtonStyle="ButtonStyle.Light"
                      Style="padding: 0.75rem 2rem; font-size: .9rem;" Click="@(() => Navigation.NavigateToLogin())" class="mt-4" />
    </RadzenCard>
</RadzenStack>
