@* This root <div /> is required for CSS isolation to work properly with components *@
<div>
    <RadzenStack class="main-stack" Orientation="Orientation.Vertical" Gap="20px">

        <!-- Hero section -->
        <RadzenCard class="hero-card">
            <RadzenText Class="hero-title gradient-text" Text="@Localizer["WelcomeToDayPlanner"]" TextAlign="TextAlign.Center" />
            <RadzenText Class="hero-description" Text="@Localizer["Introduction"]" TextAlign="TextAlign.Center" />
        </RadzenCard>

        <!-- Features section -->
        <div class="section-grid">

            <!-- Feature 1 -->
            <RadzenCard class="hover-scale feature-item">
                <RadzenIcon class="feature-icon" Icon="event_available" IconColor="@Colors.Primary" />
                <RadzenText class="feature-title" Text="@Localizer["Feature1"]" />
                <RadzenText class="feature-desc" Text="@Localizer["Feature1Description"]" />
            </RadzenCard>

            <!-- Feature 2 -->
            <RadzenCard class="hover-scale feature-item">
                <RadzenIcon class="feature-icon" Icon="insights" IconColor="@Colors.Secondary" />
                <RadzenText class="feature-title" Text="@Localizer["Feature2"]" />
                <RadzenText class="feature-desc" Text="@Localizer["Feature2Description"]" />
            </RadzenCard>

            <!-- Feature 3 -->
            <RadzenCard class="hover-scale feature-item">
                <RadzenIcon class="feature-icon" Icon="sync_alt" IconColor="@Colors.Success" />
                <RadzenText class="feature-title" Text="@Localizer["Feature3"]" />
                <RadzenText class="feature-desc" Text="@Localizer["Feature3Description"]" />
            </RadzenCard>
        </div>

        <!-- AI section -->
        <RadzenCard class="ai-card">
            <RadzenIcon class="ai-icon" Icon="psychology" IconColor="@Colors.Success" />

            <div class="ai-content">
                <RadzenText class="ai-title" Text="@Localizer["AIIntegration"]" />
                <RadzenText class="ai-desc" Text="@Localizer["AIIntegrationDescription"]" />
                <RadzenButton class="ai-btn" Text="@Localizer["TryNow"]" Icon="rocket_launch"
                              ButtonStyle="ButtonStyle.Success" Click="@(() => Navigation.NavigateToLogin())" />
            </div>
        </RadzenCard>

        <!-- Stats section -->
        <div class="section-grid">
            <RadzenCard class="hover-scale stats-item">
                <RadzenText class="stats-value" Style="color: var(--rz-primary);" Text="3+"/>
                <RadzenText class="stats-title" Style="color: var(--rz-text-secondary);" Text="@Localizer["YearsExperience"]" />
            </RadzenCard>
            <RadzenCard class="hover-scale stats-item">
                <RadzenText class="stats-value" Style="color: var(--rz-secondary);" Text="99%" />
                <RadzenText class="stats-title" Style="color: var(--rz-text-secondary);" Text="@Localizer["SatisfactionRate"]" />
            </RadzenCard>
            <RadzenCard class="hover-scale stats-item">
                <RadzenText class="stats-value" Style="color: var(--rz-success);" Text="24/7" />
                <RadzenText class="stats-title" Style="color: var(--rz-text-secondary);" Text="@Localizer["SupportAvailability"]" />
            </RadzenCard>
        </div>

        <!-- CTA Section -->
        <RadzenCard class="cta-card">

            <!-- Animated Elements -->
            <div class="cta-element1" />
            <div class="cta-element2" />

            <RadzenStack class="cta-stack" Orientation="Orientation.Vertical" Gap="1.5rem">
                <RadzenText class="cta-title" Text="@Localizer["ReadyToStart"]" />
                <RadzenText class="cta-desc" Text="@Localizer["ReadyToStartDescription"]" />

                <div class="cta-outerBtn">
                    <RadzenButton class="cta-btn" Text="@Localizer["GetStarted"]" Icon="rocket_launch" ButtonStyle="ButtonStyle.Light">
                    </RadzenButton>
                </div>
            </RadzenStack>

            <!-- Animated Sparkles -->
            <div class="cta-sparkles1">
                <RadzenIcon class="cta-icon" Icon="star" IconColor="rgba(255,255,255,0.4)" />
            </div>
            <div class="cta-sparkles2">
                <RadzenIcon class="cta-icon" Icon="star" IconColor="rgba(255,255,255,0.4)" />
            </div>
        </RadzenCard>
    </RadzenStack>
</div>